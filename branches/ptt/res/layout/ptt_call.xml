<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<RelativeLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent">

		<org.sipdroid.sipua.ui.VideoPreview
			android:id="@+id/camera_preview1" android:layout_width="176px"
			android:layout_height="144px" android:layout_alignParentRight="true"
			android:layout_alignParentTop="true" />

		<VideoView android:id="@+id/video_frame1"
			android:layout_width="300px" android:layout_height="200px"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true" />

		<!-- Note: In this TextView the paddingRight="2" attribute is required 
			because otherwise the text's drop shadow will be clipped. -->

		<TextView android:id="@+id/audio_status"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:layout_marginBottom="220dip"
			android:layout_marginRight="6dip" android:paddingRight="2dip"
			android:shadowColor="#c0000000" android:shadowDx="1"
			android:shadowDy="1" android:shadowRadius="1" android:gravity="right"
			android:textColor="@color/recording_time_elapsed_text"
			android:textSize="18dip" android:textStyle="bold" />
		<TextView android:id="@+id/video_status"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:layout_marginBottom="200dip"
			android:layout_marginRight="6dip" android:paddingRight="2dip"
			android:shadowColor="#c0000000" android:shadowDx="1"
			android:shadowDy="1" android:shadowRadius="1" android:gravity="right"
			android:textColor="@color/recording_time_elapsed_text"
			android:textSize="18dip" android:textStyle="bold" />

		<TextView android:id="@+id/recording_time1"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:layout_marginBottom="180dip"
			android:layout_marginRight="6dip" android:paddingRight="2dip"
			android:shadowColor="#c0000000" android:shadowDx="1"
			android:shadowDy="1" android:shadowRadius="1" android:gravity="right"
			android:textColor="@color/recording_time_elapsed_text"
			android:textSize="18dip" android:textStyle="bold" android:visibility="gone" />

		<ListView android:id="@+id/listMessages"
			android:layout_width="fill_parent" android:layout_height="120dip"
			android:layout_alignParentBottom="true" android:layout_marginBottom="60dip"
			android:scrollbars="horizontal" />


		<LinearLayout android:id="@+id/chatInputPanel"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_alignParentBottom="true">
			<EditText android:id="@+id/txtInputChat" android:layout_width="570px"
				android:layout_height="55dip" android:textSize="16sp">
			</EditText>
			<Button android:id="@+id/btnSend" android:layout_width="120px"
				android:layout_height="55dip" android:text="Send">
			</Button>
		</LinearLayout>

	</RelativeLayout>
	<!--</LinearLayout> -->
</LinearLayout>